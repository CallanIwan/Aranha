<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.aranha.spider.app.ConnectActivity">

    <TextView
        android:text="@string/spin_mac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MACAddressTextView"
        android:layout_alignParentStart="false"
        android:layout_toLeftOf="@+id/MACAddresseditText"
        android:layout_alignBottom="@+id/MACAddresseditText"
        android:layout_marginBottom="15dp" />

    <Button
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:text="Connect"
        android:id="@+id/connectButton"
        android:layout_below="@+id/connectedTextView"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:id="@+id/MACAddresseditText"
        android:text="00:15:83:6A:31:B7"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="Manual Connect"
        android:id="@+id/manualConnectButton"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="false"
        android:layout_toRightOf="@+id/MACAddresseditText"
        android:layout_alignTop="@+id/MACAddresseditText"
        android:layout_marginTop="-7dp"
        android:layout_marginLeft="-1dp" />

    <Button
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:text="refresh"
        android:id="@+id/refreshButton"
        android:layout_below="@+id/connectButton"
        android:layout_alignLeft="@+id/connectButton"
        android:layout_alignStart="@+id/connectButton"
        android:layout_marginTop="1dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Not Connected"
        android:id="@+id/connectedTextView"
        android:editable="false"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/raspberryName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/search_for"
        android:id="@+id/searchFortextView2"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:text="Find Device"
        android:id="@+id/findBluetoothDeviceButton"
        android:typeface="normal"
        android:layout_below="@+id/refreshButton"
        android:layout_marginTop="1dp"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/raspberryName"
        android:text="raspberrypi-0"
        android:layout_alignTop="@+id/searchFortextView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

</RelativeLayout>
