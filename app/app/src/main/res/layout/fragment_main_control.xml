<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.aranha.spider.app.MainActivity$PlaceholderFragment">



    <Button
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:text="Up"
        android:id="@+id/upButton"
        android:layout_above="@+id/downButton"
        android:layout_alignLeft="@+id/downButton"
        android:layout_alignStart="@+id/downButton" />

    <Button
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:text="Reset"
        android:id="@+id/resetButton"
        android:layout_marginRight="31dp"
        android:layout_above="@+id/upButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:text="Down"
        android:id="@+id/downButton"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/resetButton"
        android:layout_alignStart="@+id/resetButton" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="↶"
        android:id="@+id/leftRotateArrowButton"
        android:layout_alignParentStart="false"
        android:layout_alignTop="@+id/upArrowButton"
        android:layout_toLeftOf="@id/upArrowButton"/>

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="↷"
        android:id="@+id/rightRotateArrowButton"
        android:layout_alignParentStart="false"
        android:layout_alignTop="@+id/upArrowButton"
        android:layout_toRightOf="@id/upArrowButton"/>

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="←"
        android:id="@+id/leftArrowButton"
        android:layout_above="@+id/downArrowButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="↑"
        android:id="@+id/upArrowButton"
        android:layout_above="@+id/leftArrowButton"
        android:layout_toRightOf="@+id/leftArrowButton" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="→"
        android:id="@+id/rightArrowButton"
        android:layout_below="@+id/upArrowButton"
        android:layout_toRightOf="@+id/downArrowButton" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="↓"
        android:id="@+id/downArrowButton"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/leftArrowButton" />



    <ImageView
        android:layout_width="320dp"
        android:layout_height="240dp"
        android:id="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp" />


    <com.aranha.spider.app.mjpeg.MjpegView
        android:layout_width="320dp"
        android:layout_height="240dp"
        android:id="@+id/imageSurfaceView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp" />

</RelativeLayout>