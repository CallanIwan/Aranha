<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.aranha.spider.app.ConnectionSelect">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Select Connection type"
        android:id="@+id/textView"
        android:layout_above="@+id/relativeLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="34dp"
        android:visibility="gone"/>

    <Space
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_centerInParent="true"
        android:id="@+id/centerSpace" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/centerSpace"
        android:id="@+id/relativeLayout">

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/bluetoothButton"
            android:src="@drawable/bluetooth"
            android:scaleType="fitCenter"
            style="?android:borderlessButtonStyle" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Bluetooth"
            android:id="@+id/textView2"
            android:layout_below="@+id/bluetoothButton"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/centerSpace">

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/wifiButton"
            android:src="@drawable/wifi"
            android:scaleType="fitCenter"
            style="?android:borderlessButtonStyle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="WiFi"
            android:id="@+id/textView3"
            android:layout_below="@id/wifiButton"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</RelativeLayout>
